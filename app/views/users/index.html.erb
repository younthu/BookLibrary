<div class="text-center">
  <div class="row">
  <h2 class="col-md-4 col-md-offset-4"><%= @users.count %> <%= t('users')%> </h2>
  <br>
  <%= link_to t('add_user'), new_users_admin_path, class: "btn btn-default text-right" %>
  </div>
</div><br>
<div class="panel panel-default">
  <table class="table">
    <thead class="active">
      <th width="10%"><%= t('user_name')%></th>
      <th width="10%"><%= t('email')%></th>
      <th><%= t('last_signed_in') %></th>
      <th class="text-center" width="10%"><%= t('contributed') %></th>
      <th class="text-center" width="10%"><%= t('checked_out') %></th>
      <th class="text-center" width="10%"><%= t('overdue_books') %></th>
      <th class="text-center"><%= t('is_admin')%></th>
      <th class="text-center" width="15%"><%= t('options')%></th>
    </thead>
    <tbody id="users">
    <%= render @users %>
    </tbody>
  </table>
</div>
<div class="text-center" id="paginator">
  <%= paginate @users, remote: true %>
</div>
