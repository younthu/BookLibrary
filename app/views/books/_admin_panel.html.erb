<div class="col-md-2 well" style="margin: 1em">
<div class="text-center">
<h4><%= t('admin_panel') %></h4>
</div>
<br>
  <div class="text-center">
    <ul class="btn-group-vertical list-unstyled" role="group">
      <li><span class="glyphicon glyphicon-book" aria-hidden="true"></span>
      <%= link_to t("add_book"), new_book_path, class: "btn btn-default" %></li><br>
      <li><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
      <%= link_to t("add_user"), new_users_admin_path, class: "btn btn-default" %></li><br>
      <li><span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
      <%= link_to t("edit_users"), users_admin_index_path, class: "btn btn-default" %></li>
      <br>
    </ul>
  </div>
  <ul class="menu list-unstyled text-center" role="menu">
    <li><%= t('books_checked_out') %></li>
    <span class="badge"><%= borrowed_books_count %>/<%= total_book_count %></span>
    <br>
    <li><%= t('users_with_books_count') %></li>
    <span class="badge"><%= users_with_books_count %>/<%= total_user_count %></span>
  </ul>
</div>
