<br>
<div class="col-md-4 col-md-offset-4 text-center">
  <%= semantic_form_for @recommendation, html: {class: "form-group"} do |f| %>
    <div class="form-group">
      <%= f.inputs name: t('recommendation'), class: "text-center" do %>
      <br>
        <%= f.input :book_title, placeholder: " " + t('book_name'), label: false, input_html: { class: "form-control" } %>
        <%= f.input :book_isbn, placeholder: " ISBN", label: false, input_html: { class: "form-control" } %>
      <% end %>
    </div>
    <div class="actions inline-block">
      <%= f.actions do %>
        <%= f.action :submit, label: t('submit'), as: :button, button_html: { class: "btn btn-default" }  %>
        <%= f.action :cancel, label: t('reset'), as: :link, html: { class: "btn btn-default" } %>
      <% end %>
    </div>
  <% end %>
  <br>
</div>
