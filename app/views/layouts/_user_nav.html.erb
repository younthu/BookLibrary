<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
  <ul class="nav navbar-nav">
    <li><%= link_to t('books'), books_path %><span class="sr-only">(current)</span></li>
    <li><%= link_to t('locations'), locations_path %><span class="sr-only">(current)</span></li>
    <!-- <li><a href="#">Checked-out Books</a></li> -->
    <li><%= link_to t('recommendations'), recommendations_path %><span class="sr-only">(current)</span></li>
  </ul>
  <div class="navbar-form navbar-left" role="search">
    <%= form_tag books_path, method: "get" do %>
      <div class="form-group">
      <%= text_field_tag :query, params[:query], class: "form-control", placeholder: t('book_titles'), autocomplete: "off" %>
      </div>
      <%= submit_tag t('search'), class: "btn btn-default" %>
      <% if params[:query].present? %>
        <%= link_to t('clear'), books_path %>
      <% end %>
    <% end %>
