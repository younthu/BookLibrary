      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= t('settings')%> <span class="caret"></span></a>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to t("edit_my_profile"), edit_user_registration_path %></li>
        <li class="divider"></li>
        <li><a href="mailto:zhiyong.yang@dealglobe.com?Subject=[Library Issue]%20from%20<%= current_user.name %>"><%= t('report_issue')%></a></li>
      </ul>
    </li>
  </ul>
</div><!-- /.navbar-collapse -->
